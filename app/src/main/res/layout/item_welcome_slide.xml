<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:id="@+id/ivSlideImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo_toko" />

    <TextView
        android:id="@+id/tvSlideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Slide"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvSlideDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi slide disini menjelaskan fitur aplikasi dengan singkat."
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>
