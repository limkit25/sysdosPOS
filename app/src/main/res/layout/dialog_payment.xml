<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rincian Pembayaran"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvDialogTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textSize="32sp"
        android:textColor="#1976D2"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbTunai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunai"
            android:checked="true"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rbQris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QRIS"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/rbTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:layout_weight="1"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etDialogDiscount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Diskon (Rp)"
            android:inputType="number"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <CheckBox
            android:id="@+id/cbDialogTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pajak 10%"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTunai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uang Tunai Diterima:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etDialogCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="24sp"
            android:inputType="number"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDialogChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali: Rp 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDialogPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROSES BAYAR &amp; CETAK"
        android:backgroundTint="#4CAF50"
        android:padding="14dp"
        android:enabled="false"/>

</LinearLayout>