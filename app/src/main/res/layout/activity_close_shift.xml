<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#1976D2">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1976D2"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ TUTUP SHIFT"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F8FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFO CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvShiftInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kasir: Admin\nBuka: 08:00\nTutup: Sekarang"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FINANCE SUMMARY CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Ringkasan Keuangan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- ROWS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Modal Awal" />
                        <TextView android:id="@+id/tvModal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0" android:textStyle="bold"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Tunai" />
                        <TextView android:id="@+id/tvTunai" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0 (0)" android:textStyle="bold" android:textColor="#4CAF50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="QRIS" />
                        <TextView android:id="@+id/tvQris" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0 (0)" android:textStyle="bold" android:textColor="#2196F3"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Debit" />
                        <TextView android:id="@+id/tvDebit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0 (0)" android:textStyle="bold" android:textColor="#3F51B5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Transfer" />
                        <TextView android:id="@+id/tvTransfer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0 (0)" android:textStyle="bold" android:textColor="#673AB7"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Piutang" />
                        <TextView android:id="@+id/tvPiutang" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0 (0)" android:textStyle="bold" android:textColor="#FF9800"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp"/>

                    <!-- VOID SECTION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="âŒ VOID / BATAL" android:textColor="#D32F2F" android:textStyle="bold"/>
                        <TextView android:id="@+id/tvVoid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 Trx" android:textStyle="bold" android:textColor="#D32F2F"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Estimasi Uang Fisik (Laci)" android:textStyle="bold"/>
                        <TextView android:id="@+id/tvExpected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rp 0" android:textStyle="bold" android:textSize="16sp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- INPUT ACTUAL -->
             <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Verifikasi Fisik"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masukkan jumlah uang tunai yang ada di laci saat ini:"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                         android:id="@+id/etActualCash"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:background="@android:drawable/editbox_background"
                         android:hint="Rp 0"
                         android:inputType="number"
                         android:textStyle="bold"
                         android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tvDifference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selisih: Rp 0"
                        android:layout_marginTop="8dp"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"/>

                </LinearLayout>
             </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Batal"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnCloseShift"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="TUTUP &amp; CETAK"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
