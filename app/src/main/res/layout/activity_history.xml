<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1976D2"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/headerHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <!-- Burger Menu Removed -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Transaksi"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:id="@+id/btnExport"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_save"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tooltipText="Export Excel"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pantau omzet penjualan Anda di sini"
            android:textColor="#E3F2FD"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/svSearchHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:queryHint="ðŸ” Cari ID Transaksi..."
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F8FA">

        <HorizontalScrollView
            android:id="@+id/scrollFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFilterToday"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Hari Ini"
                    android:textSize="12sp"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="4dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnFilterWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="7 Hari"
                    android:textSize="12sp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#333"
                    android:layout_marginHorizontal="4dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnFilterMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="30 Hari"
                    android:textSize="12sp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#333"
                    android:layout_marginHorizontal="4dp"
                    app:cornerRadius="20dp"/>

                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Semua"
                    android:textSize="12sp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#333"
                    android:layout_marginHorizontal="4dp"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSummaryPiutang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollFilters"
            android:layout_margin="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FFEBEE">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Piutang Belum Lunas"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvTotalPiutangDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textColor="#D32F2F"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="#D32F2F"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cardSummaryPiutang"
            android:clipToPadding="false"
            android:padding="8dp"/>
    </RelativeLayout>
</LinearLayout>