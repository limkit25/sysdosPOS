<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F5F9"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sysdos POS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siap Melayani Anda"
            android:textSize="12sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/ic_menu_camera"
        android:backgroundTint="#1976D2"
        app:cornerRadius="25dp"/>
</LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/svSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_rounded_white"
        app:queryHint="ðŸ” Cari nama barang..."
        app:iconifiedByDefault="false" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="-10dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Tagihan Anda"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/tvTotalBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Diskon (Rp)"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/cbTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pajak 10%"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5F5F5"
            android:entries="@array/metode_pembayaran"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:id="@+id/layoutCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E8F5E9"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/etCashReceived"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Uang Diterima"
                    android:inputType="number"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/tvChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembali: Rp 0"
                    android:textStyle="bold"
                    android:textColor="#388E3C"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BAYAR SEKARANG"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>