<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FA">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            
            <!-- Burger Menu Removed -->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="POS Kasir"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingStart="4dp"/>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatusServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FF5252"
                app:cardElevation="0dp"
                android:layout_marginEnd="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <View
                        android:id="@+id/viewStatusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_circle_red"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tvStatusServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OFFLINE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="#FFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/svSearch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_rounded_white"
                app:queryHint="Cari menu..."
                app:iconifiedByDefault="false"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnOrderType"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_white"
                android:padding="4dp"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scrollCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:scrollbars="none"
        android:paddingVertical="12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:id="@+id/llCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollCategory"
        android:layout_above="@id/bottomBar"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNav"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Item"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvCartTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEK PESANAN >"
                android:backgroundTint="#1976D2"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:paddingHorizontal="24dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@drawable/selector_nav_color"
        app:itemTextColor="@drawable/selector_nav_color"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"/>
</RelativeLayout>