<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FA">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Kasir Pintar POS"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="#FFF"/>
        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_rounded_white"
            app:queryHint="Cari menu..."
            app:iconifiedByDefault="false"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scrollCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:scrollbars="none"
        android:paddingVertical="12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCatAll"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Semua"
                android:backgroundTint="#1976D2"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCatFood"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Makanan"
                android:backgroundTint="#FFFFFF"
                android:textColor="#1976D2"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCatDrink"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Minuman"
                android:backgroundTint="#FFFFFF"
                android:textColor="#1976D2"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCatSnack"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Snack"
                android:backgroundTint="#FFFFFF"
                android:textColor="#1976D2"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollCategory"
        android:layout_above="@id/bottomBar"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Item"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:id="@+id/tvCartTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BAYAR"
                android:backgroundTint="#FF9800"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:paddingHorizontal="32dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>